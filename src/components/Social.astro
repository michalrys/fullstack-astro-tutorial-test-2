---
const {platform, username, title} = Astro.props;
---
<a href=`https://www.${platform}.com/${username}` target="_blank" rel="noopener" title={title}>{title}</a>

<style>
    a {
      color: #f8f8f8;
      text-decoration: none;
      font-weight: 500;
      background: rgba(255,255,255,0.08);
      padding: 6px 12px;
      border-radius: 5px;
      transition: background 0.18s, color 0.18s;
    }
    a:hover {
      background: #4266ee;
      color: #fff;
    }
  </style>