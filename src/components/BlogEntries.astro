const articles = [
  {
    title: "Understanding Astro Components",
    summary: "A quick introduction to building fast and modern websites using Astro's component model.",
    link: "/blog/astro-components"
  },
  {
    title: "Why Choose Astro for Frontend",
    summary: "See the unique benefits that Astro brings to web development and what sets it apart from others.",
    link: "/blog/why-astro"
  },
  {
