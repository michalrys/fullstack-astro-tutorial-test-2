---
import FooterSmall from "../components/FooterSmall.astro";

const title = "Astro tutorial - simple blog";
export const author = {
	firstName : "Steve",
	lastName : "Jobs",
	hobbies : ["books", "cheess", "swimming"]
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<FooterSmall />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
